<%- include("./includes/head.ejs") %>
    <link rel="stylesheet" href="css/cadastro.css">
    <title>Cadastro</title>
    </head>

    <body>
        <%- include("./includes/navigation.ejs") %>
        <main>
            <div class="card-wrapper" id="cadastro">
                <div class="form-header">
                    <h1>Criar Conta</h1>
                    <p>Cadastre-se para agendar e gerenciar seus serviços</p>
                </div>

                <form id="formCadastro" action="/login" method="post">
                    <div class="grid-2">
                        <div class="form-group">
                            <label for="nome">Nome Completo</label>
                            <input class="input-control" type="text" id="nome" name="nome" placeholder="Seu nome"
                                minlength="3" required>
                        </div>
                        <div class="form-group">
                            <label for="telefone">Telefone (WhatsApp)</label>
                            <input class="input-control" type="tel" id="telefone" name="telefone"
                                placeholder="(11) 90000-0000" pattern="\\(?\\d{2}\\)?\\s?9?\\d{4}-?\\d{4}" required>
                        </div>
                    </div>

                    <div class="grid-2">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input class="input-control" type="email" id="email" name="email"
                                placeholder="seuemail@exemplo.com" required>
                        </div>
                        <div class="form-group">
                            <label for="genero">Gênero (opcional)</label>
                            <select id="genero" name="genero" class="input-control">
                                <option value="">Selecione...</option>
                                <option>Feminino</option>
                                <option>Masculino</option>
                                <option>Não Binário</option>
                                <option>Prefiro não informar</option>
                            </select>
                        </div>
                    </div>

                    <div class="grid-2">
                        <div class="form-group pw-toggle">
                            <label for="senha">Senha</label>
                            <input class="input-control" type="password" id="senha" name="senha" placeholder="••••••••"
                                minlength="6" required>
                            <button type="button" class="pw-toggle-btn" data-target="senha"
                                aria-label="Mostrar/ocultar senha">
                                <i class="fa-regular fa-eye"></i>
                            </button>
                            <div class="password-policy">
                                Mínimo 6 caracteres. Utilize letras e números para mais segurança.
                            </div>
                        </div>
                        <div class="form-group pw-toggle">
                            <label for="confirmar">Confirmar Senha</label>
                            <input class="input-control" type="password" id="confirmar" name="confirmar"
                                placeholder="Repita a senha" minlength="6" required>
                            <button type="button" class="pw-toggle-btn" data-target="confirmar"
                                aria-label="Mostrar/ocultar confirmação">
                                <i class="fa-regular fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="preferencias">Observações ou Preferências</label>
                        <textarea id="preferencias" name="preferencias"
                            placeholder="Ex: Preferência por horário da manhã, alergia a produto X..."></textarea>
                    </div>

                    <div class="form-group">
                        <label for="canal">Como conheceu o salão?</label>
                        <select id="canal" name="canal" class="input-control">
                            <option value="">Selecione...</option>
                            <option>Instagram</option>
                            <option>Indicação de Amigo</option>
                            <option>Google</option>
                            <option>Passando em Frente</option>
                            <option>Outro</option>
                        </select>
                    </div>

                    <!-- <div class="inline-row">
                        <label class="terms">
                            <input type="checkbox" id="aceite" required>
                            <span>Li e aceito os <a href="#">Termos de Uso</a> e a <a href="#">Política de
                                    Privacidade</a>.</span>
                        </label>
                    </div> -->

                    <button type="submit" class="btn btn-submit">Criar Conta</button>

                    <!-- <div id="feedback" class="feedback"></div>

                    <div class="divider">ou</div>

                    <div class="social-row">
                        <button type="button" class="social-btn">
                            <i class="fab fa-google"></i> Google
                        </button>
                        <button type="button" class="social-btn">
                            <i class="fab fa-facebook-f"></i> Facebook
                        </button>
                    </div> -->

                    <p class="login-hint">
                        Já tem conta? <a href="login.html">Fazer login</a>
                    </p>
                </form>
            </div>
        </main>
        <%- include("./includes/footer.ejs") %>