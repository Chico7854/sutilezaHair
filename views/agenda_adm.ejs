<%- include("./includes/head.ejs") %>
    <link rel="stylesheet" href="/css/agenda-adm.css">
    <script src="/js/agenda-adm.js" defer></script>
    <title>Agenda</title>
    </head>

    <body>
        <%- include("./includes/navigation.ejs") %>
            <main>
                <div class="container">
                    <div class="page-title">
                        <h1>Agenda Administrativa</h1>
                        <div class="filters">
                            <input type="date" id="dataSelecionada">
                            <button class="btn" id="btnNovoHorario"><i class="fa-solid fa-plus"></i>&nbsp;Novo Horário</button>
                        </div>
                    </div>

                    <div class="legend">
                        <span><b class="lg-livre"></b> Livre</span>
                        <span><b class="lg-ocupado"></b> Ocupado</span>
                    </div>

                    <div class="agenda-wrapper" aria-label="Tabela de agendamentos">
                        <table id="tabelaAgenda">
                            <thead>
                                <tr>
                                    <th>Horário</th>
                                    <th>Domingo</th>
                                    <th>Segunda</th>
                                    <th>Terça</th>
                                    <th>Quarta</th>
                                    <th>Quinta</th>
                                    <th>Sexta</th>
                                    <th>Sábado</th>
                                </tr>
                            </thead>
                            <tbody id="agendaBody">
                                <!-- Linhas geradas via JS -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

<!-- Popup Novo Horário -->
<div id="popupNovoHorario" class="popup-overlay">
    <div class="popup-box">

        <h2>Novo Horário</h2>

        <div style="display:flex; flex-direction:column; gap:14px;">

            <label for="data">Data
                <input type="date" name="data" id="data">
            </label>

            <label for="horas">Horário
                <input type="time" name="horas" id="horas">
            </label>

            <label for="duracao">Duração
                <input type="text" placeholder="ex: 50 (Em minutos)" name="duracao" id="duracao">
            </label>

            <label for="nomeCliente">Cliente
                <input type="text" placeholder="Nome do Cliente" name="nomeCliente" id="nomeCliente">
            </label>

            <label for="nomeAtendente">Atendente
                <input type="text" placeholder="Nome do Atendente" name="nomeAtendente" id="nomeAtendente">
            </label>

            <label for="descricao">Descrição / Serviço
                <input type="text" placeholder="Ex: Corte Feminino" name="descricao" id="descricao">
            </label>

            <label for="pagamento">Pagamento
                <input type="text" placeholder="PIX, Cartão, Dinheiro..." name="pagamento" id="pagamento">
            </label>

        </div>

        <div class="popup-actions">
            <button id="popupNovoHorarioFechar" class="btn-login-nav" style="flex:1;">Cancelar</button>
            <button class="btn" style="flex:1;" id="popupNovoHorarioSalvar">Salvar</button>
        </div>

    </div>
</div>

            <%- include("./includes/footer.ejs") %>