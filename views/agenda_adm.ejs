<%- include("./includes/head.ejs") %>
    <link rel="stylesheet" href="css/agenda-adm.css">
    <script src="js/agenda-adm.js" defer></script>
    <title>Agenda</title>
    </head>

    <body>
        <%- include("./includes/navigation.ejs") %>
            <main>
                <div class="container">
                    <div class="page-title">
                        <h1>Agenda Administrativa</h1>
                        <div class="filters">
                            <input type="date" id="dataSelecionada">
                            <select id="filtroProfissional">
                                <option value="">Todos os Profissionais</option>
                            </select>
                            <select id="filtroServico">
                                <option value="">Todos os Serviços</option>
                            </select>
                            <button class="btn" id="btnNovoHorario"><i class="fa-solid fa-plus"></i>&nbsp;Novo Horário</button>
                            <button class="btn" id="btnExportar"><i
                                    class="fa-solid fa-file-export"></i>&nbsp;Exportar</button>
                        </div>
                    </div>

                    <div class="legend">
                        <span><b class="lg-livre"></b> Livre</span>
                        <span><b class="lg-ocupado"></b> Ocupado</span>
                        <span><b class="lg-bloqueado"></b> Bloqueado</span>
                        <span class="no-select" style="opacity:.65">Passe o mouse ou clique para detalhes</span>
                    </div>

                    <div class="agenda-wrapper" aria-label="Tabela de agendamentos">
                        <table id="tabelaAgenda">
                            <thead>
                                <tr>
                                    <th>Horário</th>
                                    <th>Segunda</th>
                                    <th>Terça</th>
                                    <th>Quarta</th>
                                    <th>Quinta</th>
                                    <th>Sexta</th>
                                    <th>Sábado</th>
                                </tr>
                            </thead>
                            <tbody id="agendaBody">
                                <!-- Linhas geradas via JS -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

<!-- Popup Novo Horário -->
<div id="popupNovoHorario" class="popup-overlay">
    <div class="popup-box">

        <h2>Novo Horário</h2>

        <div style="display:flex; flex-direction:column; gap:14px;">

            <label>Data
                <input type="date">
            </label>

            <label>Horário
                <input type="time">
            </label>

            <label>Duração
                <input type="text" placeholder="ex: 1h, 30m">
            </label>

            <label>Cliente
                <input type="text" placeholder="Nome do Cliente">
            </label>

            <label>Atendente
                <input type="text" placeholder="Nome do Atendente">
            </label>

            <label>Descrição / Serviço
                <input type="text" placeholder="Ex: Corte Feminino">
            </label>

            <label>Pagamento
                <input type="text" placeholder="PIX, Cartão, Dinheiro...">
            </label>

        </div>

        <div class="popup-actions">
            <button id="popupNovoHorarioFechar" class="btn-login-nav" style="flex:1;">Cancelar</button>
            <button class="btn" style="flex:1;">Salvar</button>
        </div>

    </div>
</div>

            <%- include("./includes/footer.ejs") %>